<h1>Employee Info</h1>

<% if @employee.img_url %>
    <%= image_tag @employee.img_url %>
<% end %>

<br>
<p>Name: <%= @employee.full_name %></p>
<p>Alias: <%= @employee.alias %>
<p>Title: <%= @employee.title %>
<p>Office: <%= @employee.office %>
<p>Dog: <%= link_to @employee.dog.name, dog_path(@employee.dog) %>
